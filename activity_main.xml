<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--
            Chain Setup with Weights:
            - layout_width="0dp" (Match Constraint)
            - layout_constraintHorizontal_weight="1" (Default equal weight)
        -->

        <!-- Item 1: Home (Start of Chain) -->
        <include layout="@layout/custom_bottom_nav_item"
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nav_browse"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <!-- Item 2: Browse -->
        <include layout="@layout/custom_bottom_nav_item" android:id="@+id/nav_browse"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/nav_home"
            app:layout_constraintEnd_toStartOf="@+id/nav_radio" />

        <!-- Item 3: Radio -->
        <include layout="@layout/custom_bottom_nav_item" android:id="@+id/nav_radio"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/nav_browse"
            app:layout_constraintEnd_toStartOf="@+id/nav_library" />

        <!-- Item 4: Library -->
        <include layout="@layout/custom_bottom_nav_item" android:id="@+id/nav_library"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/nav_radio"
            app:layout_constraintEnd_toStartOf="@+id/nav_five" />

        <!-- Item 5: Nav Five -->
        <include layout="@layout/custom_bottom_nav_item" android:id="@+id/nav_five"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/nav_library"
            app:layout_constraintEnd_toStartOf="@+id/nav_six" />

        <!-- Item 6: Nav Six (End of Chain) -->
        <include layout="@layout/custom_bottom_nav_item" android:id="@+id/nav_six"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/nav_five"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
